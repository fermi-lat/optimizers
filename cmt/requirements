# make sure test application gets built when library changes
macro test_optimizersstamps "optimizers.stamp"

macro my_headers "" WIN32 "../optimizers/*.h *.h"
library optimizers -no_share $(my_headers) *.f *.c *.cxx $(pydir)*.i

# test application
application test_optimizers test/*.cxx
