package optimizers
version v2r1

author James Chiang <jchiang@slac.stanford.edu>
author Pat Nolan <pln@razzle.stanford.edu>

# $Id$

use GlastPolicy *
use xmlBase v5r*
use cfitsio v1* IExternal
use f2c v*
use CLHEP v2* IExternal

apply_pattern package_include
apply_pattern package_linkopts
apply_pattern package_stamps

use SwigPolicy v*
apply_pattern swig_module name="pyOpt"

path_remove PYTHONPATH optimizers
path_append PYTHONPATH $(OPTIMIZERSROOT)/$(BINDIR)
#path_append PYTHONPATH $(OPTIMIZERSROOT)/python

private

macro_prepend includes "" WIN32 "/I $(OPTIMIZERSROOT)\src /I.. "
macro_append cppflags "" Linux " -I../src -DTRAP_FPE " 
macro_prepend cflags "" Linux " -g -O "

macro source *.cxx WIN32 "*.h *.cxx"

library optimizers -no_share $(source) *.c

application test_optimizers test/main.cxx
